<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgProductSaleProduct"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_marginVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/gray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameAccountChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tvPriceProduct"
            app:layout_constraintLeft_toRightOf="@id/imgProductSaleProduct"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgProductSaleProduct"
            tools:text="nama product" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInfoPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp."
            android:textColor="@color/red"
            app:layout_constraintBottom_toTopOf="@+id/tvInfoTotalQuantitySaleProduct"
            app:layout_constraintLeft_toLeftOf="@id/tvNameAccountChat"
            app:layout_constraintTop_toBottomOf="@id/tvNameAccountChat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPriceProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            app:layout_constraintLeft_toRightOf="@id/tvInfoPrice"
            app:layout_constraintTop_toTopOf="@id/tvInfoPrice"
            tools:text="10000000000" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInfoTotalQuantitySaleProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah "
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/imgProductSaleProduct"
            app:layout_constraintLeft_toLeftOf="@id/tvNameAccountChat"
            app:layout_constraintTop_toBottomOf="@id/tvPriceProduct" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTotalQuantitySaleProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/tvInfoTotalQuantitySaleProduct"
            app:layout_constraintTop_toTopOf="@id/tvInfoTotalQuantitySaleProduct"
            tools:text="10000000000" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>